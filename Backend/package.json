  },
  "homepage": "https://github.com/RevocatusMimbi/Plagiarism-Postgresql-and-MongDB-project#readme",
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "@types/express": "^5.0.5",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "zod": "^4.1.13"
