{
  "name": "backend",
  "version": "1.0.0",
  "description": "The backend for the Plagiarism application",
  "type": "module",
  "main": "src/server.ts",
  "scripts": {
    "lint": "eslint \"**/*.ts\"",
    "lint:fix": "eslint \"**/*.ts\" --fix",
    "format": "prettier --write \"**/*.ts\"",
    "start": "ts-node --esm src/server.ts",
    "dev": "nodemon --exec tsx src/server.ts",
    "test": "jest",
    "seed": "ts-node prisma/seed.ts"
  },
  "prisma": {
    "seed": "tsx ./prisma/seed.ts"
  },
  "ts-node": {
    "esm": true
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/RevocatusMimbi/Plagiarism-Postgresql-and-MongDB-project.git"
